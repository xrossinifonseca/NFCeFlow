<div>

<h2 class="text-white text-center text-2xl">Sign up</h2>


  <div class="flex justify-center text-white mt-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
    <div class="mt-4">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text-zinc-800" %>
  </div>


  <div class="mt-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-zinc-800" %>
  </div>

  <div class="mt-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text-zinc-800" %>
  </div>

  <div class="mt-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-zinc-800" %>
  </div>

 <div class="flex justify-center mt-4">
  <button class="text-lg text-white bg-blue-500 p-2 rounded-md active:scale-105 shadow-xl">
  <%= f.submit "Sign up"%>
  </button>
  </div>

<div class="text-center space-y-2 mt-4">

<%= link_to "Log up", customer_session_path %>
</div>
<% end %>

</div>




</div>